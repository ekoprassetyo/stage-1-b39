  <section class="p-3 mb-2 text-dark myproject">
    <h2 class = "fw-bold" style="text-align: center;margin-bottom: 50px;">MY PROJECT</h2>
    <div class="row d-flex justify-content-center">
      {{#each dataProject}}
        <div class="col-sm-3">
            <div class="card">
               <a href="/project-detail/{{this.id}}" target="_blank">
               <img src="uploads/{{this.image}}" class="card-img-top" alt="gambar1">
               </a>
