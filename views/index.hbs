                    <h5 class="card-title">{{this.project_name}}</h5>
                    <p class="fw-light"> duration : {{this.duration}}</p>
                    <p class="card-text">author : {{author}} </p>
                    <p class="card-text">{{this.description}}</p>
                    {{#if technologies.[0]}}
                      <i class="fa-brands fa-xl fa-{{this.technologies.[0]}}" ></i>
                    {{/if}}
                    {{#if technologies.[1]}}
                      <i class="fa-brands fa-xl fa-{{this.technologies.[1]}}"></i>
                    {{/if}}
                    {{#if technologies.[2]}}
                      <i class="fa-brands fa-xl fa-{{this.technologies.[2]}}"></i>
                    {{/if}}
