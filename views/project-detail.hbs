<html>
  <head>
    <title>Project Detail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"/>
  </head>
  <body>
   <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-light fw-bolder">
      <div class="container">
        <a class="navbar-brand" href="index.html">
          <img src="/assets/images/logo.png" alt="logo">
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href='/'>Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-dark active" aria-current="page" href='/add-project'>Add Project</a>
            </li>
          </ul>

          <a href='/contact' class="btn bg-dark text-white px-3 rounded-pill">Contact Me </a>
        </div>
      </div>
  </nav>

    <section class="container-fluid row d-flex justify-content-center">
      {{!-- <div class=" container row d-flex justify-content-center" style=""> --}}
        <div class="mb-3 mt-5 d-flex justify-content-center">
           <h2>{{data.project_name}}</h2>
        </div>
    <div class="mt-3 d-flex justify-content">
          <div>
            <img src="/assets/images/fullstack.jpg" alt="Blog Detail Image" width="500px" style="margin-right: 20px;" />
          </div>
          <div class="">
            <div class="mb-3">
              <i class="fa-regular fa-calendar"> {{data.start_date}} - {{data.end_date}}</i>
            </div>
            <div class="mb-3">
              <i class="fa-regular fa-clock"> {{data.duration}}</i>
            </div>
              <h5>Technologies</h5>
            {{!-- <div class="d-flex justify-content-start"> --}}
                <div class="d-flex">
                  <div>
                   {{#if data.technologies.[0]}}
                      <i class="fa-brands fa-l fa-{{data.technologies.[0]}}" > React Js</i>
                    {{/if}}
                  </div>
                  <div>
                    {{#if data.technologies.[1]}}
                      <i class="fa-brands fa-l fa-{{data.technologies.[1]}}"> Node Js</i>
                    {{/if}}                
                  </div>
                </div>
                <div class="d-flex">
                  <div>
                    {{#if data.technologies.[2]}}
                      <i class="fa-brands fa-l fa-{{data.technologies.[2]}}"> Vue Js</i>
                    {{/if}}
                  </div>
                  <div>
                    {{#if data.technologies.[3]}}
                      <i class="fa-brands fa-l fa-{{data.technologies.[3]}}"> Javascript</i>
                    {{/if}}
                  </div>
                </div>
              {{!-- </div> --}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="mt-5 ms-3">
          <p>
            {{data.description}}
          </p>
        </div>
  </body>
</html>
