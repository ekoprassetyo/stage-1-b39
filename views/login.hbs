<!DOCTYPE html>
<html>
  <head>
    <title>Form Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/addproject.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"/>
   
  </head>
  <body>
   <!-- Navbar -->
   <nav class="navbar navbar-expand-lg bg-light fw-bolder">
    <div class="container">
      <a class="navbar-brand" href="#">
        <img src="assets/images/logo.png" alt="logo">
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href='/'>Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" aria-current="page" href='/add-project'>Add Project</a>
          </li>
        </ul>

        <a href='/login' class="btn text-dark px-3 rounded-pill">Login</a>

        <a href='/register' class="btn text-dark px-3 rounded-pill mx-3">Register</a>

        <a href='/contact' class="btn bg-dark text-white px-3 rounded-pill">Contact Me </a>
      </div>
    </div>
   </nav>

    <div class="container-fluid d-flex justify-content-center align-items-center ">
        <div class="container-form mt-3 ">
            <h2 class="mb-5 text-center">SIGN IN TO YOUR ACCOUNT</h2>
          {{#if messages.danger }}
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>{{messages.danger}}</strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          {{/if}}
            <form action="/login" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="inputEmail" name="inputEmail" placeholder="Input your register email..">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="inputPassword" name="inputPassword" placeholder="Input your password..">
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn bg-black text-white px-3">Login</button>
                </div>
            </form>
        </div>
  </body>
</html>
